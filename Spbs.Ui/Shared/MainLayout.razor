@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<ToastNotificationComponent/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudSpacer />
        <LoginDisplay/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Docked">

        <MudNavMenu Bordered="true" Rounded="true" Color="Color.Primary" Class="ps-2">
            <MudText Typo="Typo.h6" Class="px-4">Spbs</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Main Menu</MudText>
            <MudDivider Class="my-2"/>
            
            <MudNavLink Href="/home" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/expenses" Icon="@Icons.Material.Filled.AttachMoney" Match="NavLinkMatch.All">Expenses</MudNavLink>
            <MudNavLink Href="/recurring" Icon="@Icons.Material.Filled.Schedule" Match="NavLinkMatch.All">Recurring Expenses</MudNavLink>
            <MudNavLink Href="/data/visualize" Icon="@Icons.Material.Filled.BarChart" Match="NavLinkMatch.All">Visualize</MudNavLink>

            <MudNavGroup Title="Bank Integration" Expanded="false">
                <MudNavLink Href="/accounts/links/" Icon="@Icons.Material.Filled.KeyboardDoubleArrowLeft" Match="NavLinkMatch.All">Connected Banks</MudNavLink>
                <MudNavLink Href="/external/banks" Icon="@Icons.Material.Filled.AddLink" Match="NavLinkMatch.All">Link to Bank</MudNavLink>
            </MudNavGroup>
            @* <MudNavLink Href="/about"  Match="NavLinkMatch.All">About</MudNavLink> *@
        </MudNavMenu>

    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="py-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>