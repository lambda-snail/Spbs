@page "/expenses"
@using Spbs.Ui.Features.Expenses

<div>
    <div class="row">
        <h3>ExpensesOverview</h3>
    </div>

    <div class="row">
        <div class="card col-6">
            
            <div class="card-body">
                @* New Expense *@
                <button class="btn btn-outline-primary" onclick="@ToggleAddExpenseMode" data-toggle="tooltip" data-placement="top" title="Add New Expense">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                </button>

                @* Edit Expense *@
                <button class="btn btn-outline-secondary" onclick="@ToggleAddExpenseMode" data-toggle="tooltip" data-placement="top" title="Edit Expense">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                    </svg>
                </button>




            </div>
            
        </div>
    </div>
</div>

@if (_expenses is null || _expenses.Count == 0)
{
    <p>No expenses to show yet!</p>
}
else
{
    <container>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Date</th>
                <th scope="col">Venue</th>
            </tr>
            </thead>
            <tbody>

            @for (int i = 0; i < _expenses.Count; ++i)
            {
                Expense e = _expenses[i];
                <tr>
                    <td>@i.ToString()</td>
                    <td>
                        <button type="button" class="btn btn-link">
                            <NavLink href="@GetExpenseDetailsUrl(e)">
                                @e.Name
                            </NavLink>
                        </button>
                    </td>
                    <td>@e.Date.ToShortDateString()</td>
                    <td>@e.Venue</td>
                </tr>
            }
            </tbody>
        </table>
    </container>
}

<EditExpenseComponent @ref="_editExpenseComponent" GetUserId="() => _cachedUserId" OnUpdateCallback="ExpenseItemAdded"></EditExpenseComponent>