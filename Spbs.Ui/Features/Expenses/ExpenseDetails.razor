@page "/expenses/{ExpenseId}"
<h3>ExpenseDetails</h3>

@if (_expense is null)
{
    <p>OOps, nothing here!</p>
}
else
{
    <p>@_expense.Name</p>


    <form class="g-3">
        <div class="row col-auto">
            <label for="name">Name</label>
            <input type="text" readonly class="form-control" id="name" value="@_expense.Name">
        </div>
        <div class="row col-auto">
            <label for="date">Date</label>
            <input type="date" readonly class="form-control" id="date" value="@_expense.Date.ToShortDateString()">
        </div>
    </form>
}