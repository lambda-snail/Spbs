@inherits Spbs.Ui.Components.UserSettings.UserSettingsComponentBase

<div class="py-4">
    <span>

        <Button @onclick="OnAddCategoryClickedAsync"
                Size="Size.Small"
                Color="ButtonColor.Secondary">
            New Category
        </Button>

        <Button @onclick="OnRemoveCategoryClickedAsync"
                Disabled="@(_selectedCategories.Count == 0)"
                Size="Size.Small"
                Color="ButtonColor.Secondary">
            Remove Category
        </Button>

    </span>
    <span class="d-flex flex-row justify-content-end">
        <Button 
                Size="Size.Small"
                Color="ButtonColor.Primary">Save</Button>
    </span>
</div>

<Grid @ref="_grid"
      TItem="ExpenseCategoryListItem"
      Class="table table-hover table-bordered table-striped"
      Data="_expenseCategories"
      AllowFiltering="true"
      AllowSelection="true"
      SelectionMode="GridSelectionMode.Multiple"
      SelectedItemsChanged="OnSelectionChanged"
      Responsive="true">

    <GridColumn TItem="ExpenseCategoryListItem" HeaderText="Category" PropertyName="CategoryName">
        @context.CategoryName
    </GridColumn>
</Grid>