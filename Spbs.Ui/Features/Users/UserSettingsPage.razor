@page "/me/settings"
@page "/me/settings/{Index}"
@using Position = MudBlazor.Position


<MudTabs @bind-ActivePanelIndex="_selectedSettingsIndex"
         Position="Position.Top"
         Rounded="true"
         Border="true"
         ApplyEffectsToContainer="true"
         Class="mt-8"
         PanelClass="pa-6">

    @foreach (var component in _settingsPageList)
    {
        <MudTabPanel Text="@(component.MenuName)" />
    }
</MudTabs>

@if (_readyToRender)
{
    <DynamicComponent
        @ref="_dynamicComponent"
        Parameters="_dynamicComponentParameters"
        Type="@(_settingsPageList[_selectedSettingsIndex].ComponentType)"/>
}
