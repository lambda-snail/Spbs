@page "/data/visualize"

<div id="dashboard" class="container">
    <div class="row">
        <div class="col">

            <div class="row">
                <div class="col">
                    <DateInput TValue="DateTime" @bind-Value="@_filter.FromDate" Placeholder="Enter From Date"/>
                </div>
                <div class="col">
                    <DateInput TValue="DateTime?" @bind-Value="@_filter.ToDate" Placeholder="Enter To Date"/>
                </div>
                <div class="col-2 d-inline-flex flex-row-reverse">
                    <Button
                        @onclick="@RefreshData"
                        Size="Size.Small"
                        Color="ButtonColor.Primary">
                            <Icon Name="IconName.ArrowClockwise"/>
                    </Button>
                </div>
            </div>

            <div class="row">
                <BarChart @ref="_chart1" Class="mb-4" />
            </div>
        </div>
        <div class="col">

        </div>
    </div>
</div>
