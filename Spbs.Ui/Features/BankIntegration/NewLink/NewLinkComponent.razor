@if (_institution is not null && _eula is not null)
{
    <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.h6">
                    Creating a link to @_institution.Name
                </MudText>

                <MudDivider/>

                <MudText Typo="Typo.body1">By proceeding you agree to giving us the following access</MudText>

                <MudList Clickable="false">
                    <MudListItem Text="@($"Access valid for {_eula.AccessValidForDays} days")" Icon="@Icons.Material.Filled.Inbox"/>
                    <MudListItem Text="@($"Access to up to {_eula.MaxHistoricalDays} of transaction history")" Icon="@Icons.Material.Filled.Send"/>
                    <MudListItem Text="@($"Scope of access: {string.Join(", ", _eula.AccessScope)}")" Icon="@Icons.Material.Filled.Send"/>
                </MudList>
            </MudItem>
            <MudItem xs="6">
                <MudPaper Class="pa-2" style="height: 100%" Outlined="true">
                    <MudText Typo="Typo.h6">Disclaimer</MudText>
                    <MudText Typo="Typo.body1">The connection to the bank is mediated by <MudLink>https://gocardless.com/bank-account-data/</MudLink>. We do not access your account information or transactions unless initiated by you from the bank integration menu.</MudText>
                    <MudText Typo="Typo.body1">Since the purpose of the bank integration is to import transactions we do store that data in our database. The data is stored solely for YOU - we do not analyze the data except to produce graphs and dashboards for you.</MudText>
                    <MudText Typo="Typo.body1">Happy accounting :)</MudText>
                </MudPaper>
            </MudItem>
        </MudGrid>
}
