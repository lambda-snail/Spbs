@page "/recurring"
@using Size = MudBlazor.Size

<MudText Typo="Typo.h3" GutterBottom="true" Class="mt-4">Recurring Expenses</MudText>

<MudDivider Class="mb-4"/>

<MudGrid Spacing="6" Class="mt-16">
    <MudItem xs="7">
        <MudText Typo="Typo.h5" GutterBottom="true">All Recurring Expenses</MudText>
        
        <RecurringExpensesListComponent @ref="_recurringExpensesList"/>

    </MudItem>
    <MudItem xs="5">
        <MudText Typo="Typo.h5" GutterBottom="true">Upcoming Expenses</MudText>
        <MudPaper Class="d-flex flex-column pa-2" Style="height:100%;" Outlined="true">

            <UpcomingRecurringExpensesComponent/>

        </MudPaper>
    </MudItem>
</MudGrid>