<MudList Clickable="true" Dense="false" DisableGutters="false">
    @{
        if (_upcomingExpenses.Count == 0)
        {
            <MudListItem Text="No upcoming payments due this month!" />
        }
        else
        {
            var today = DateTime.Now;
            foreach (var expense in _upcomingExpenses)
            {
                <MudListItem Href="@expense.GetDetailsUrl()" Text="@(expense.Name + " in " + (expense.BillingDay - today.Day) + " days")"/>
            }
        }
    }
</MudList>